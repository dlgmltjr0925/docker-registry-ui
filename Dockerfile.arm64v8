FROM arm64v8/node:lts-alpine 
MAINTAINER fine<dlgmltjr0925@gmail.com>

EXPOSE 3000

RUN apk add --update --no-cache --repository http://dl-3.alpinelinux.org/alpine/edge/community --repository http://dl-3.alpinelinux.org/alpine/edge/main vips-dev

# Create Work directory
RUN mkdir -p /docker-registry-ui

# Change Work directory 
WORKDIR /docker-registry-ui

# Copy package info
COPY . .

# Run Server
CMD ["yarn", "start"];
